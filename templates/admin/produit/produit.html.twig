{% extends 'base.html.twig' %}

{% block title %}Détails Produit{% endblock %}

{% block body %}
<h1 class="admin-title text-center">Produit {{ nom }}</h1>

<table class="text-center table admin-table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ produit.nom }}</td>
        </tr>
    </tbody>
</table>
<div class="d-flex justify-content-center">

    <a class="btn btn-primary" href="{{ path('admin_produits') }}">Retourner à la liste</a>
    <a class="btn btn-success mx-2" href="{#{{ path('tag_edit', {'id': produit.id}) }}#}">Editer Produit</a>
    {#{{ include('tag/_delete_form.html.twig') }}#}

</div>
{% endblock %}