{% extends 'base_admin.html.twig' %}

{% block title %}Détails Produit{% endblock %}

{% block body %}
<div class="row">
        <div class="col-12 col-md-8 offset-md-2">
        
            <h1 class="admin-title text-center">Produit {{ nom }}</h1>

            <table class="text-center table admin-table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ produit.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ produit.nom }}</td>
                    </tr>
                    <tr>
                        <th>Marque</th>
                        <td>{{ produit.marque ? produit.marque : '--' }}</td>
                    </tr>
                    <tr>
                        <th>Modèle</th>
                        <td>{{ produit.modele ? produit.modele : '--' }}</td>
                    </tr>
                    <tr>
                        <th>Référence</th>
                        <td>{{ produit.reference }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ produit.prix }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <img height="800px" src="{{ produit.image ? asset('img/produits/') ~ produit.image : asset('img/produits/default.jpg') }}"
                    alt="image produit {{ produit.id }}">
            </div>

            <div class="pt-3 d-flex justify-content-center">

                <a class="btn btn-primary" href="{{ path('admin_produits') }}">Retourner à la liste</a>
                <a class="btn btn-success mx-2" href="{{ path('produit_edit', {'id': produit.id}) }}">Editer Produit</a>
                {{ include('produit/_delete_form.html.twig') }}

            </div>
    </div>
</div>
{% endblock %}