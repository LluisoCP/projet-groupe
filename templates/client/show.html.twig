{% extends 'base_admin.html.twig' %}

{% block title %}Détails Client{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 col-md-8 offset-md-2">

        <h1 class="admin-title text-center">Client {{ nom }}</h1>
        
        <table class="text-center table admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ client.roles ? client.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.ville }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ client.cp }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ client.createdAt ? client.createdAt|date('H:i à Y/m/d') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ client.updatedAt ? client.updatedAt|date('H:i à Y/m/d') : '' }}</td>
            </tr>
        </tbody>
        </table>
        <div class="d-flex justify-content-center">
            
            <a class="btn btn-primary" href="{{ path('admin_clients') }}">Retourner à la liste</a>
            <a class="btn btn-success mx-2" href="{{ path('client_edit', {'id': client.id}) }}">Editer client</a>
            {{ include('client/_delete_form.html.twig') }}
            
        </div>
    </div>
</div>
{% endblock %}
