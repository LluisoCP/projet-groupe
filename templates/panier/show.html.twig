{% extends 'base_admin.html.twig' %}

{% block title %}Détails Panier{% endblock %}

{% block body %}
    <h1 class="admin-title text-center">Panier</h1>

    <table class="text-center table admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ panier.createdAt ? panier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ panier.updatedAt ? panier.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ panier.quantite }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ panier.montant }}</td>
            </tr>
            <tr>
                <th>Prix_unite</th>
                <td>{{ panier.prixUnite }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center">

        <a class="btn btn-primary" href="{{ path('admin_paniers') }}">Retourner à la liste</a>
        <a class="btn btn-success mx-2" href="{{ path('panier_edit', {'id': panier.id}) }}">Editer</a>
        {{ include('panier/_delete_form.html.twig') }}

    </div>
{% endblock %}
