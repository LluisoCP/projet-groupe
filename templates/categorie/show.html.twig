{% extends 'base_admin.html.twig' %}

{% block title %}Détails Categorie{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 col-md-8 offset-md-2">

        <h1 class="admin-title text-center">Categorie {{ nom }}</h1>
    
        <table class="text-center table admin-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
    
            <a class="btn btn-primary" href="{{ path('categorie_index') }}">Retourner à la liste</a>
            <a class="btn btn-success mx-2" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Editer catégorie</a>
            {{ include('categorie/_delete_form.html.twig') }}
    
        </div>
    </div>
</div>
{% endblock %}
