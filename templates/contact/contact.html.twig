{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <h3 class="tex-center">On vous écoute</h3>
            {{ form_start(form) }}

                {{ form_row(form.prenom) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.organisation) }}
                {{ form_row(form.telephone) }}
                {{ form_row(form.email) }}
                {{ form_row(form.contenu) }}
                <small class="d-block">Nous respectons la loi de protection de donées.</small>
                <small class="d-block">En envoyant ce formulaire vous acceptez les <a href="{{ path('conditions_utilisation') }}">conditions générales d'utilisation</a></small>
                <button type="submit" class="btn btn-success">Envoyer</button>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
